{
  "name": "temporal-bridge",
  "version": "1.0.0",
  "description": "AI memory system that creates searchable, temporal knowledge graphs from Claude Code conversations",
  "private": true,
  "scripts": {
    "dev:cli": "pnpm --filter temporal-bridge-cli dev",
    "dev:mcp": "pnpm --filter temporal-bridge-mcp dev",
    "build": "pnpm -r build",
    "build:cli": "pnpm --filter temporal-bridge-cli build",
    "build:mcp": "pnpm --filter temporal-bridge-mcp build",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "pnpm -r typecheck",
    "cli": "pnpm --filter temporal-bridge-cli start",
    "mcp": "pnpm --filter temporal-bridge-mcp start"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.7.7",
    "@vitest/ui": "^2.1.2",
    "@golevelup/ts-vitest": "^0.5.0",
    "typescript": "^5.6.3",
    "tsx": "^4.19.1",
    "vitest": "^2.1.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}