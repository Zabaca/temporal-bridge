{
  "name": "temporal-bridge-cli",
  "version": "1.0.0",
  "description": "CLI interface for TemporalBridge AI memory system",
  "main": "./dist/main.js",
  "bin": {
    "temporal-bridge": "./dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/main.ts",
    "dev:mcp": "tsx src/mcp.ts",
    "start": "node dist/main.js",
    "start:mcp": "node dist/mcp.js",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testNamePattern='.*\\.it\\.test\\.ts'",
    "test:unit": "jest --testNamePattern='.*\\.test\\.ts' --testPathIgnorePatterns='.*\\.it\\.test\\.ts' --testPathIgnorePatterns='.*\\.e2e\\.it\\.test\\.ts'",
    "test:e2e": "jest --testNamePattern='.*\\.e2e\\.it\\.test\\.ts'",
    "test:all": "pnpm test"
  },
  "dependencies": {
    "@getzep/zep-cloud": "^3.2.0",
    "@nestjs/common": "^10.4.4",
    "@nestjs/core": "^10.4.4",
    "@rekog/mcp-nest": "^1.8.2",
    "nest-commander": "^3.13.0",
    "reflect-metadata": "^0.2.2",
    "yaml": "^2.6.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.4.4",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.7",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
