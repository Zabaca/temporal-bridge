{
  "name": "temporal-bridge-cli",
  "version": "1.0.0",
  "description": "CLI interface for TemporalBridge AI memory system",
  "main": "./dist/main.js",
  "bin": {
    "temporal-bridge": "./dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/main.ts",
    "dev:mcp": "tsx src/mcp.ts",
    "start": "node dist/main.js",
    "start:mcp": "node dist/mcp.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@getzep/zep-cloud": "^3.2.0",
    "@rekog/mcp-nest": "^1.8.2",
    "nest-commander": "^3.13.0",
    "@nestjs/common": "^10.4.4",
    "@nestjs/core": "^10.4.4",
    "@nestjs/platform-express": "^10.4.4",
    "reflect-metadata": "^0.2.2",
    "yaml": "^2.6.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.7",
    "typescript": "^5.6.3",
    "tsx": "^4.19.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
